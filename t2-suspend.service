[Unit]
Description=Workaround for brcmfmac suspend/resume issues
Before=sleep.target
StopWhenUnneeded=yes

[Service]
User=root
Type=oneshot
RemainAfterExit=yes

ExecStart=/etc/systemd/system-sleep/t2-suspend.sh pre
ExecStop=//etc/systemd/system-sleep/t2-suspend.sh post

[Install]
WantedBy=sleep.target
